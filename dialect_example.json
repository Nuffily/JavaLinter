
{
  "naming": {
    "classes": "CAMEL_CASE_CAPITAL",
    "methods": "CAMEL_CASE_LOWER",
    "variables": "CAMEL_CASE_LOWER"
  },
  "spaces": {
    "around_operators": true,
    "no_around_brackets": true,
    "after_comma": true,
    "no_before_comma": true,
    "may_be_more_that_one_space": false,
    "no_before_dot_comma": true,
    "no_around_dot": true
  },
  "empty_lines": {
    "max_empty": 2,
    "after_method": 1,
    "after_class": 3
  }
}